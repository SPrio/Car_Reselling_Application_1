<h1>CRUD operations for Car Brands and models</h1>
<%= link_to "Add New Car Brand", new_car_brand_path %> |
<%= link_to "Go to Admin Dashboard", admins_index_path %>


<% if @car_brands != [] %>
<h3>Listing of Car Brands and their models inside it</h3>
<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
 
  <% @car_brands.each do |c| %>
    <tr>
      <td><%= c.name %></td>
      <td><%= link_to "Show", car_brand_path(c) %></td>
      <td><%= link_to "Edit", edit_car_brand_path(c) %></td>
      <td><%= link_to "Destroy", car_brand_path(c),
              method: :delete,
              data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
<% end %>