<div class="jumbotron">
  <h1>Seller Dashboard</h1>
</div>
<p><%= link_to "Back", home_index_path , class: 'btn btn-secondary btn-lg' %></p>
<div class="card text-center">
  <div class="card-header">Resell your car at the best Price</div>
  <div class="card-body">
    <%= link_to "Add New Car", new_car_path, class: "btn btn-secondary btn-lg" %>
  </div>
</div>
<% if @cars != [] %>
  <p></p>
  <div class="card">
    <div class="card-header">
      <h3>Listing of Cars</h3>
    </div>
  </div>
  <table class="table">
    <tr class="thead-light">
      <th scope="col">Brand</th>
      <th scope="col">Model</th>
      <th scope="col">Variant</th>
      <th scope="col">Kilometer Driven</th>
      <th scope="col">Registration Year</th>
      <th scope="col">City</th>
      <th scope="col">Registration State</th>
      <th scope="col">Condition</th>
      <th colspan="3"></th>
    </tr>
  
    <% @cars.each do |c| %>
      <tr>
        <td><%= c.brand %></td>
        <td><%= c.model %></td>
        <td><%= c.variant %></td>
        <td><%= c.kilometer_driven %></td>
        <td><%= c.registration_year %></td>
        <td><%= c.city %></td>
        <td><%= c.registration_state %></td>
        <td><%= c.condition %></td>
        <td><%= link_to "Show", car_path(c) %></td>
        <td><%= link_to "Edit", edit_car_path(c) %></td>
        <td><%= link_to "Destroy", car_path(c),
                method: :delete,
                data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </table>
<% end %>