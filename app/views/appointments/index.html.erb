<h1>Manage Appointments with users</h1>
<table>
<tr>
<th>Appointment Id</th>
<th>Appintment Date</th>
<th>Used Id</th>
<th>Car Id</th>
<th>Status</th>
<th colspan = '3'></th>
</tr>
<% @appointments.each do |ap| %>
<tr>
<td><%= ap.id %></td>
<td><%= ap.date %></td>
<td><%= ap.user_id %></td>
<td><%= ap.car_id %></td>
<td><%= ap.status %></td>
<td><%= link_to "Approve", details_appointment_path(ap) %></td>
 <td><%= link_to "Reject", appointment_path(ap),
              method: :delete,
              data: { confirm: "Are you sure?" } %> </td>
</tr>

<% end %>
</table>